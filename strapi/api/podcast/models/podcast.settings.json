{
  "kind": "collectionType",
  "collectionName": "podcasts",
  "info": {
    "name": "podcast",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "unit_type": {
      "type": "enumeration",
      "enum": [
        "podcast"
      ],
      "default": "podcast",
      "required": true
    },
    "title": {
      "type": "string"
    },
    "speakers": {
      "type": "string"
    },
    "intro": {
      "type": "text"
    },
    "description": {
      "type": "richtext"
    },
    "moderator": {
      "type": "string"
    },
    "episode_cover": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "offline_episode_logo": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "projekts": {
      "collection": "projekt",
      "via": "podcasts"
    },
    "themes": {
      "collection": "theme",
      "via": "podcasts"
    },
    "episode_id": {
      "type": "integer",
      "required": true,
      "unique": false
    },
    "language": {
      "type": "enumeration",
      "enum": [
        "de",
        "en"
      ],
      "required": true
    },
    "de_equivalent": {
      "model": "podcast",
      "via": "en_equivalent"
    },
    "en_equivalent": {
      "model": "podcast",
      "via": "de_equivalent"
    },
    "perspektives": {
      "collection": "perspektive",
      "via": "podcasts"
    }
  }
}
