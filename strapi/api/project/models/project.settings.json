{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "name": "project",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "perspectives": {
      "collection": "perspective",
      "via": "projects"
    },
    "themes": {
      "collection": "theme",
      "via": "project"
    },
    "unit_type": {
      "type": "enumeration",
      "enum": [
        "perspective",
        "project",
        "podcast"
      ]
    },
    "filter_panel": {
      "type": "dynamiczone",
      "components": [
        "element-component.filter-panel",
        "element-component.tag"
      ]
    },
    "body": {
      "type": "dynamiczone",
      "components": [
        "single-page-component.cover-media",
        "single-page-component.remark",
        "single-page-component.content",
        "single-page-component.project-gallery",
        "single-page-component.textblock",
        "single-page-component.media",
        "single-page-component.project-title",
        "single-page-component.machine-generated",
        "single-page-component.relation"
      ]
    },
    "title": {
      "type": "string"
    },
    "artist": {
      "type": "string"
    },
    "cover_media": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    }
  }
}
