{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "name": "project",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "perspectives": {
      "collection": "perspective",
      "via": "projects"
    },
    "themes": {
      "collection": "theme",
      "via": "project"
    },
    "unit_type": {
      "type": "enumeration",
      "enum": [
        "project"
      ],
      "default": "project",
      "required": true
    },
    "body": {
      "type": "dynamiczone",
      "components": [
        "single-page-component.cover-media",
        "single-page-component.remark",
        "single-page-component.content",
        "single-page-component.project-gallery",
        "single-page-component.textblock",
        "single-page-component.media",
        "single-page-component.project-title",
        "single-page-component.machine-generated",
        "single-page-component.relation"
      ]
    },
    "title": {
      "type": "string"
    },
    "artist": {
      "type": "string"
    },
    "cover_media": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "js": {
      "type": "string"
    },
    "default_design": {
      "type": "boolean",
      "default": true
    },
    "addon": {
      "type": "component",
      "repeatable": false,
      "component": "single-page-component.add-on"
    }
  }
}
