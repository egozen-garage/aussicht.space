{
  "kind": "collectionType",
  "collectionName": "perspektives",
  "info": {
    "name": "perspektive",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "unit_type": {
      "type": "enumeration",
      "enum": [
        "perspective"
      ],
      "default": "perspective",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "author": {
      "type": "string"
    },
    "date": {
      "type": "string"
    },
    "body": {
      "type": "dynamiczone",
      "components": [
        "text-types.intro",
        "text-types.paragraph-plain",
        "text-types.paragraph-with-machine",
        "text-types.paragraph-with-relation",
        "text-types.paragraph-with-image",
        "text-types.subhead",
        "text-types.white-space",
        "image-types.fullscreen-image",
        "image-types.single-image",
        "image-types.couple-images",
        "addon.javascript-file-name",
        "addon.website",
        "addon.html-css",
        "addon.machine-perspective"
      ]
    },
    "preview_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "cover_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "projekts": {
      "collection": "projekt",
      "via": "perspektives"
    },
    "add_to_unit_hub": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "themes": {
      "via": "perspektives",
      "collection": "theme"
    },
    "language": {
      "type": "enumeration",
      "enum": [
        "de",
        "en"
      ],
      "required": true
    },
    "de_equivalent": {
      "model": "perspektive",
      "via": "en_equivalent"
    },
    "en_equivalent": {
      "model": "perspektive",
      "via": "de_equivalent"
    },
    "podcasts": {
      "via": "perspektives",
      "collection": "podcast",
      "dominant": true
    }
  }
}
